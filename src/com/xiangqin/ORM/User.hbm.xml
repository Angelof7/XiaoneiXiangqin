<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- name类名，table表名 -->
	<class name="com.xiangqin.ORM.User" table="Users">
		<!-- id标签表示主键 -->
		<id name="id" column="user_id" type="string">
			<!--  -->
			<generator class="assigned"></generator>
		</id>
		<!-- 下面是字段映射 name属性,column是字段 type数据库类型 -->
		<property name="username" column="display_name" type="string"></property>
		<property name="email" column="email" type="string"></property>
		<property name="password" column="password" type="string"></property>
		<property name="firstlogin" column="loginfirst" type="int" ></property>
	</class>
</hibernate-mapping>